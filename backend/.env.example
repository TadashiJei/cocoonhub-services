# Server
PORT=3000
NODE_ENV=development

# CORS
# Comma-separated list of allowed origins in production, e.g.
# CORS_ORIGINS=https://app.example.com,https://admin.example.com,https://staging.example.com
CORS_ORIGINS=

# Throttling (global rate limiting)
THROTTLE_TTL_SECONDS=60
THROTTLE_LIMIT=100

# Database (local dev defaults)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/cocoonhub?schema=public
DB_EAGER_CONNECT=false

# Cache / Queue
REDIS_URL=redis://localhost:6379

# Auth / Security
JWT_SECRET=change_me
ALLOW_DEV_ROLES_HEADER=false
ACCESS_TOKEN_TTL_SECONDS=900
REFRESH_TOKEN_TTL_DAYS=30

# Payments (Stripe)
STRIPE_API_KEY=
STRIPE_WEBHOOK_SECRET=
# Comma-separated allowed prefixes for success/cancel URLs (production)
# STRIPE_REDIRECT_ALLOWLIST=https://app.example.com,https://staging.example.com
STRIPE_REDIRECT_ALLOWLIST=

# Email / SMS
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# SMTP (alternative email provider)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
SMTP_FROM_EMAIL=

# Retention
NOTIFICATIONS_RETENTION_DAYS=90

# Object Storage
S3_BUCKET=
S3_REGION=
S3_ENDPOINT=
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET=
R2_PUBLIC_BASE_URL=

# KYC/AML
KYC_PROVIDER=persona
KYC_WEBHOOK_SECRET=

# Security
# 32-byte base64 key for AES-256-GCM application-level encryption of PII
# Generate with: openssl rand -base64 32
APP_DATA_KEY=

# Shipping Providers
NINJAVAN_BASE_URL=
NINJAVAN_API_TOKEN=

# Observability (optional)
OTEL_EXPORTER_OTLP_ENDPOINT=
